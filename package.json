{
  "name": "ihsm",
  "version": "0.0.6",
  "description": "An idiomatic hierarchical state machine",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "test": "mocha",
    "lint": "eslint --ignore-path .gitignore src/",
    "build": "tsc --build tsconfig.json",
    "postbuild": "npm run dist",
    "dist": "rm -Rf ./lib; mkdir ./lib && cp ./src/*.js ./lib && cp ./src/*.d.ts ./lib",
    "doc": "typedoc ./src"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filasieno/hsmjs.git"
  },
  "keywords": [
    "hsm",
    "hierarchical",
    "fsm",
    "state machine",
    "hierarchical state machine",
    "sm"
  ],
  "author": "Fabio N. Filasieno",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/filasieno/ihsm/issues"
  },
  "homepage": "https://github.com/filasieno/ihsm#readme",
  "dependencies": {
    "queue": "^6.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.10",
    "@types/eslint": "~6.1.8",
    "@types/mocha": "^7.0.2",
    "@types/node": "~13.7.7",
    "@typescript-eslint/eslint-plugin": "~2.21.0",
    "@typescript-eslint/parser": "~2.21.0",
    "chai": "^4.2.0",
    "eslint": "~6.8.0",
    "eslint-config-google": "~0.14.0",
    "mocha": "^7.1.0",
    "node": "~13.9.0",
    "nodemon": "~2.0.2",
    "ts-node": "^8.6.2",
    "typedoc": "~0.16.11",
    "typescript": "~3.8"
  }
}
