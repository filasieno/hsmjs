{
	"author": "Fabio N. Filasieno",
	"browser": "./lib/index.browser.js",
	"bugs": {
		"url": "https://github.com/filasieno/ihsm/issues"
	},
	"contributors": [
		"Roberto Boati"
	],
	"dependencies": {},
	"description": "An idiomatic hierarchical state machine",
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/chai": "^4.2.11",
		"@types/eslint": "~6.1.8",
		"@types/mocha": "^7.0.2",
		"@types/node": "~13.7.7",
		"@typescript-eslint/eslint-plugin": "~2.21.0",
		"@typescript-eslint/parser": "~2.21.0",
		"browserify": "^16.5.0",
		"chai": "^4.2.0",
		"coveralls": "^3.0.11",
		"eslint": "~6.8.0",
		"eslint-config-google": "~0.14.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.3",
		"lint-staged": "^10.0.9",
		"mocha": "^7.1.1",
		"mocha-lcov-reporter": "^1.3.0",
		"node": "~13.9.0",
		"nodemon": "~2.0.2",
		"nyc": "^15.0.0",
		"onchange": "^6.1.0",
		"prettier": "1.19.1",
		"source-map-support": "^0.5.16",
		"ts-node": "^8.8.1",
		"tsify": "^4.0.1",
		"typedoc": "~0.16.11",
		"typescript": "^3.8.3"
	},
	"homepage": "https://github.com/filasieno/ihsm#readme",
	"keywords": [
		"hsm",
		"hierarchical",
		"fsm",
		"state machine",
		"hierarchical state machine",
		"sm"
	],
	"license": "MIT",
	"main": "./lib/index.js",
	"name": "ihsm",
	"repository": {
		"type": "git",
		"url": "https://github.com/filasieno/ihsm.git"
	},
	"scripts": {
		"build-browser": "tsc --build tsconfig.browser.json",
		"build-node": "tsc --build tsconfig.json",
		"clean": "rm -rf ./lib ./.tsc ./.nyc_output ./coverage ./src/*.js ./src/*.d.ts ./src/*.js.map ./src/examples/*.js ./src/examples/*.d.ts ./src/examples/*.js.map ./spec/*.js ./spec/*.d.ts ./spec/*.js.map",
		"dist-examples": "mkdir -p ./lib/examples && cp ./src/examples/*.ts ./lib/examples",
		"dist": "npm run dist-browser && npm run dist-node && npm run dist-examples && npm run doc",
		"dist-browser": "mkdir -p ./lib && cp ./src/index.js ./lib/index.browser.js && cp ./src/index.d.ts ./lib/index.d.ts",
		"dist-node": "mkdir -p ./lib && cp ./src/index.js ./lib/index.js && cp ./src/index.d.ts ./lib/index.d.ts",
		"postdoc": "mkdir -p ./lib/doc/api/assets/images && cp assets/images/* ./lib/doc/api/assets/images",
		"doc": "typedoc ./src/index.ts && eslint ./src/index.ts",
		"lint": "prettier --check './src/**/*.ts'",
		"prebuild-browser": "rm -f ./.tsc",
		"prebuild-node": "rm -f ./.tsc",
		"predist": "npm run clean",
		"predist-browser": "npm run build-browser",
		"predist-node": "npm run build-node",
		"prettier": "prettier --write './src/**/*.ts'",
		"prettier-watch": "onchange './src/**/*.ts' -- prettier --write {{changed}}",
		"build": "npm run dist",
		"test": "nyc mocha './spec/**/*.spec.ts'",
		"coverage": "nyc report --reporter=text-lcov | coveralls"
	},
	"types": "./lib/index.d.ts",
	"version": "0.0.16"
}
